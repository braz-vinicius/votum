@using Microsoft.AspNetCore.Identity
@using Votus.Infrastructure.Identity
@inject SignInManager<WebApplicationUser> SignInManager
@inject UserManager<WebApplicationUser> UserManager
@{
    ViewData["ActivePage"] = ViewContext.RouteData.Values["Controller"] ?? ViewContext.RouteData.Values["page"];

    string GetActivePage(string page)
    {
        return ViewData["ActivePage"].Equals(page) ? "is-active" : "";
    }
}
@if (SignInManager.IsSignedIn(User))
{

    var userDetail = await UserManager.FindByEmailAsync(User.Identity?.Name); 

    <div id="main-navbar" class="navbar navbar-v1 is-inline-flex is-transparent no-shadow is-hidden-mobile">
        <div class="container is-fluid">
            <div class="navbar-brand">
                <a href="/" class="navbar-item">
                    <img class="logo light-image" src="~/assets/img/logo/votus-logo.svg" width="112" height="28" alt="">
                    <img class="logo dark-image" src="~/assets/img/logo/votus-logo.svg" width="112" height="28" alt="">
                </a>
            </div>
            <div class="navbar-menu">
                <div class="navbar-start">

                    <div class="navbar-item is-icon">
                        <a class="icon-link @GetActivePage("Home")" asp-controller="Home" aria-label="Home">
                            <i data-feather="book"></i>
                            <span class="indicator"></span>
                        </a>
                    </div>

                    <div class="navbar-item is-icon drop-trigger">
                        <a class="icon-link @GetActivePage("Proposition")" asp-controller="Proposition" asp-action="Index">
                            <i data-feather="check-circle"></i>
                            <span class="indicator"></span>
                        </a>
                    </div>
                </div>

                <div class="navbar-end">

                    <div id="account-dropdown" class="navbar-item is-account drop-trigger has-caret">
                        <div style="max-height: 38px">

                            <img src="@(userDetail.ProfileImageUrl??"/assets/cdn/profile/default_user_icon.png")" alt="">
                            <span class="indicator"></span>
                        </div>

                        <div class="nav-drop is-account-dropdown">
                            <div class="inner">
                                <div class="nav-drop-header">
                                    <span class="username">@userDetail.FullName.Split(' ').First() @userDetail.FullName.Split(' ').Last()</span>
                                    <label class="theme-toggle">
                                        <input type="checkbox">
                                        <span class="toggler">
                                            <span class="dark">
                                                <i data-feather="moon"></i>
                                            </span>
                                            <span class="light">
                                                <i data-feather="sun"></i>
                                            </span>
                                        </span>
                                    </label>
                                </div>
                                <div class="nav-drop-body account-items">
                                    <a href="~/Identity/Account/Manage" class="account-item">
                                        <div class="media">
                                            <div class="icon-wrap">
                                                <i data-feather="settings"></i>
                                            </div>
                                            <div class="media-content">
                                                <h3>Configurações</h3>
                                                <small>Acessar definições de conta.</small>
                                            </div>
                                        </div>
                                    </a>
                                    <form name="logout" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                                        <a class="account-item" onclick="document.forms.logout.submit()">
                                            <div class="media">
                                                <div class="icon-wrap">
                                                    <i data-feather="power"></i>
                                                </div>
                                                <div class="media-content">
                                                    <h3>Sair</h3>
                                                    <small>Sair da sua conta.</small>
                                                </div>
                                            </div>
                                        </a>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}
