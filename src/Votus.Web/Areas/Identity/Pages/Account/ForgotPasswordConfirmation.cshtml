@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmação de esquecimento de senha";
    Layout = "_LayoutAuth";
}

<div class="login-container is-centered">
    <div class="columns is-vcentered">
        <div class="column">

            <h2 class="form-title has-text-centered">@ViewData["Title"]</h2>
            <h3 class="form-subtitle has-text-centered">Por favor, verifique seu e-mail para redefinir sua senha.</h3>
        </div>
    </div>
</div>